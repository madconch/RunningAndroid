<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorTheme</item>
        <item name="android:textColorPrimary">#333</item>
        <item name="android:textSize">14sp</item>
        <item name="uiThemeColor">@color/colorTheme</item>
        <item name="uiThemeTextColor">#fff</item>
        <item name="uiTitleBarBackgroundColor">@color/colorTheme</item>
        <item name="uiTitleBarTitleTextColor">#fff</item>
        <item name="uiTitleBarMenuTextColor">#fff</item>
        <item name="uiTitleBarBackButtonResource">@mipmap/ic_back</item>
        <item name="uiStatusBarColor">@color/colorTheme</item>
        <item name="uiNavigationBarColor">#000</item>
    </style>

    <style name="TransparentDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
