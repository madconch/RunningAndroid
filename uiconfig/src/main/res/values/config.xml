<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="madUITheme" format="reference" />

    <declare-styleable name="MadUITheme">
        <attr name="uiThemeColor" format="reference|color" />
        <attr name="uiThemeTextColor" format="reference|color" />
        <attr name="uiTitleBarBackgroundColor" format="reference|color" />
        <attr name="uiTitleBarTitleTextColor" format="reference|color" />
        <attr name="uiTitleBarMenuTextColor" format="reference|color" />
        <attr name="uiTitleBarBackButtonResource" format="reference" />
        <attr name="uiStatusBarColor" format="reference|color" />
        <attr name="uiStatusBarColorIsLightMode" format="boolean" />
        <attr name="uiNavigationBarColor" format="reference|color" />
    </declare-styleable>

    <style name="DefaultMadUITheme">
        <item name="uiThemeColor">#ff00ff</item>
        <item name="uiThemeTextColor">#ffffff</item>
        <item name="uiTitleBarBackgroundColor">#ff00ff</item>
        <item name="uiTitleBarTitleTextColor">#ff00ff</item>
        <item name="uiTitleBarMenuTextColor">#ff00ff</item>
        <item name="uiTitleBarBackButtonResource">@mipmap/ic_back</item>
        <item name="uiStatusBarColor">#ff00ff</item>
        <item name="uiStatusBarColorIsLightMode">true</item>
        <item name="uiNavigationBarColor">#ff00ff</item>
    </style>
</resources>